{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <div class="section-header-action">
        <h1>Album</h1>
        <div class="header-buttons-group">
            <a class="btn btn-primary" href="{{ path('album_edit', {'id': album.id}) }}">Editer</a>
            {{ include('album/_delete_form.html.twig') }}
            <a class="btn btn-secondary" href="{{ path('album_index') }}">Retour</a>
        </div>
    </div>

    <table class="table table-dark table-stripped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>
            <tr>
                <th>Published_year</th>
                <td>{{ album.publishedYear }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ album.price }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
