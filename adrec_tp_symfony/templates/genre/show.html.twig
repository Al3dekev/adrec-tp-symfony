{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
    <div class="section-header-action">
        <h1>Genre</h1>
        <div class="header-buttons-group">
            <a class="btn btn-primary" href="{{ path('genre_edit', {'id': genre.id}) }}">Editer</a>
            {{ include('genre/_delete_form.html.twig') }}
            <a class="btn btn-secondary" href="{{ path('genre_index') }}">Retour</a>
        </div>
    </div>

    <table class="table table-dark table-stripped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ genre.name }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
