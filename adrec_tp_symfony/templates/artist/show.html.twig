{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <div class="section-header-action">
        <h1>Artiste</h1>
        <div class="header-buttons-group">
            <a class="btn btn-primary" href="{{ path('artist_edit', {'id': artist.id}) }}"><i class="fas fa-pen"></i> Editer</a>
            {{ include('artist/_delete_form.html.twig') }}
            <a class="btn btn-secondary" href="{{ path('artist_index') }}"><i class="fas fa-arrow-circle-left"></i> Retour</a>
        </div>
    </div>

    <table class="table table-dark table-stripped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ artist.nationality }}</td>
            </tr>
            <tr>
                <th>Beginning_year</th>
                <td>{{ artist.beginningYear }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
