{% extends 'base.html.twig' %}

{% block title %}Song{% endblock %}

{% block body %}
    <div class="section-header-action">
        <h1>Chanson</h1>
        <div class="header-buttons-group">
            <a class="btn btn-primary" href="{{ path('song_edit', {'id': song.id}) }}">Editer</a>
            {{ include('song/_delete_form.html.twig') }}
            <a class="btn btn-secondary" href="{{ path('song_index') }}">Retour</a>
        </div>
    </div>

    <table class="table table-dark table-stripped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ song.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ song.name }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ song.duration }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ song.price }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
